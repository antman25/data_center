{
  "builders": [
    {
      "boot_command": [
        "e<down><down><end><bs><bs><bs><bs><bs>text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<leftCtrlOn>x<leftCtrlOff>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "disk_type_id": "0",
      "guest_os_type": "centos-64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "echo 'packer'|sudo -S /sbin/halt -h -p",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": 22,
      "ssh_timeout": "30m",
      "ssh_username": "{{ user `ssh_username` }}",
      "storage": [
        {
          "disk_size": "{{ user `disk_size` }}"
        }
      ],
      "type": "vsphere-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "firmware": "efi",
        "memsize": "{{ user `memsize` }}",
        "numvcpus": "{{ user `numvcpus` }}",
        "virtualHW.version": "14"
      }
    }
  ],"provisioners": [
  {
    "execute_command": "echo 'packer'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
    "inline": [
      "dnf -y update",
      "dnf -y install python3",
      "alternatives --set python /usr/bin/python3",
      "pip3 install ansible"
    ],
    "type": "shell"
  },
  {
    "playbook_file": "scripts/setup.yml",
    "type": "ansible-local"
  },
  {
    "execute_command": "echo 'packer'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/cleanup.sh"
    ],
    "type": "shell"
  }
]
  ,
  "variables": {
    "boot_wait": "5s",
    "disk_size": "40960",
    "iso_checksum": "md5:47dc26d76e566280cc47437fd2466134",
    "iso_url": "http://10.0.0.164/scratch/downloads/iso/CentOS-8.2.2004-x86_64-dvd1/CentOS-8.2.2004-x86_64-dvd1.iso",
    "memsize": "1024",
    "numvcpus": "1",
    "ssh_password": "packer",
    "ssh_username": "packer",
    "vm_name": "CentOS-8-x86_64-2004"
  }
}

